<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Kotta+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kreon&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Gestão de Feirantes</title>
    <style>
        body {
            font-family: 'Kreon', Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .header,
        .footer {
            background-color: #2E5700;
            color: white;
            width: 100vw;
            margin-left: calc(50% - 50vw);
        }

        .btn-custom {
            background-color: #2E5700;
            color: white;
        }

        .btn-custom:hover {
            background-color: #244600;
        }

        .section-title {
            font-family: 'Lobster', cursive;
            color: #2E5700;
        }

        .section-subtitle {
            color: #6c757d;
        }

        .custom-link {
            color: white;
            text-decoration: none;
        }

        .card {
            border: 1px solid #2E5700;
        }

        .card-body {
            text-align: center;
        }

        .main-title {
            font-size: 2rem;
            color: white;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #2E5700;
        }

        .form-container label {
            display: block;
            margin-bottom: 5px;
            color: #333333;
        }

        .form-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-container button {
            background-color: #2E5700;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-container button[type="reset"] {
            background-color: #6c757d;
            margin-left: 10px;
        }

        .table-container {
            max-width: 1000px;
            margin: 0 auto;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #2E5700;
            color: white;
        }

        button {
            background-color: #2E5700;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 2px 0;
        }

        button:hover {
            background-color: #244600;
        }
    </style>
</head>

<body>
    <div class="container-fluid header py-3">
        <div class="row">
            <div class="col text-center">
                <h1 class="main-title">Gestão de Feirantes</h1>
            </div>
        </div>
    </div>

    <div class="container my-5 form-container">
        <h1>Cadastro de Feirantes</h1>

        <form id="userForm">
            <input required type="hidden" name="id" id="id">
            <label for="username">Nome</label>
            <input required name="username" id="username" type="text"><br>
            <label for="password">Senha</label>
            <input required name="password" id="password" type="text"><br>
            <label for="email">Email</label>
            <input required name="email" id="email" type="text"><br>
            <label for="phone">Telefone</label>
            <input required name="phone" id="phone" type="text">
            <button type="submit">Enviar</button>
            <button type="reset">Cancelar</button>
        </form>
        <span id="error"></span>

        <%if(error){%>
        <span><%=error%></span>
        <%}%>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <%for(let col of cols){%>
                        <th><%=col%></th>
                        <%}%>
                    </tr>
                </thead>
                <tbody>
                    <%for(let user of users){%>
                    <tr>
                        <%for(let prop in user){%>
                        <td><%=user[prop]%></td>
                        <%}%>
                        <td>
                            <button onclick="editUser('<%=user.id%>')">Editar</button>
                            <button onclick="deleteUser('<%=user.id%>')">Deletar</button>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>

    <div class="container-fluid footer py-3">
        <div class="row">
            <div class="col-md-4 text-center mb-3">
                <h5>Contato</h5>
                <p>(81) 9 9397-0505</p>
                <p>contato@rotadaterra.com</p>
            </div>
            <div class="col-md-4 text-center mb-3">
                <h5>Mapa do site</h5>
                <p><a href="index.ejs" class="custom-link">home</a></p>
                <p><a href="users.ejs" class="custom-link">Feirantes</a></p>
                <p><a href="pets.ejs" class="custom-link">Investidores</a></p>
                <p><a href="login.ejs" class="custom-link">Login</a></p>
            </div>
            <div class="col-md-4 text-center mb-3">
                <h5>Rota da Terra</h5>
                <p>Todos os direitos reservados ©</p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById('userForm');
            const errorElement = document.getElementById('error');
            const successElement = document.getElementById('success');

            if (form) {
                form.addEventListener("submit", (e) => {
                    e.preventDefault();
                    const user = mountDataForm();
                    let id = user.id;
                    let METHOD = id ? 'PUT' : 'POST';
                    let URL = id ? `/users/${id}` : '/users';
                    createOrUpdate(user, URL, METHOD);
                });
            }

            // Função para criar ou atualizar usuário
            function createOrUpdate(user, URL, METHOD) {
                fetch(URL, {
                    method: METHOD,
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(user)
                })
                .then(async (res) => { return await checkError(res) })
                .then((user) => {
                    form.reset();
                    if (successElement) {
                        successElement.innerText = 'Operação realizada com sucesso!';
                    }
                    setTimeout(() => { window.location.reload() }, 2000);
                })
                .catch((error) => { 
                    if (errorElement) {
                        errorElement.innerText = error.message || 'Erro ao realizar operação';
                    }
                });
            }

            // Função para editar usuário
            window.editUser = function editUser(id) {
                fetch("/users/" + id, {
                    method: "GET"
                })
                .then(async (res) => { return await checkError(res) })
                .then((user) => {
                    for (let prop in user) {
                        const input = document.querySelector(`input[name="${prop}"]`);
                        if (input) {
                            input.value = user[prop];
                        }
                    }
                })
                .catch((error) => {
                    if (errorElement) {
                        errorElement.innerText = error.message || 'Erro ao carregar usuário';
                    }
                });
            };

            // Função para deletar usuário
            window.deleteUser = function deleteUser(id) {
                fetch("/users/" + id, {
                    method: "DELETE"
                })
                .then(async (res) => {
                    if (!res.ok) {
                        const err = await res.json();
                        throw new Error(err.message || 'Erro ao deletar usuário');
                    }
                    return res.json();
                })
                .then(() => {
                    if (successElement) {
                        successElement.innerText = 'Usuário deletado com sucesso!';
                    }
                    setTimeout(() => { window.location.reload() }, 2000);
                })
                .catch((error) => {
                    if (errorElement) {
                        errorElement.innerText = error.message || 'Erro ao deletar usuário';
                    }
                });
            };

            // Função para checar erros na resposta
            async function checkError(res) {
                if (!res.ok) {
                    const err = await res.json();
                    throw new Error(err.message || 'Erro desconhecido');
                }
                return res.json();
            }

            // Função para montar dados do formulário
            function mountDataForm() {
                const formData = new FormData(form);
                const user = {};
                for (let [key, value] of formData.entries()) {
                    user[key] = value;
                }
                return user;
            }
        });
    </script>
</body>

</html>
