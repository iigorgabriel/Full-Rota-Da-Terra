<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <h3 class="center-align">Login</h3>
      <form id="loginForm" action="/login" method="POST">
        <div class="input-field">
          <input id="username" type="text" name="username" required>
          <label for="username">Username</label>
        </div>
        <style>
          /* Estilo para o botão de login */
          .custom-login-btn {
              background-color: #2E5700; /* Cor de fundo verde */
              color: white; /* Cor do texto branco */
          }
          /* Estilo para o botão de login ao passar o mouse */
          .custom-login-btn:hover {
              background-color: #245200; /* Cor de fundo verde escuro ao passar o mouse */
          }
      </style>
        <div class="input-field">
          <input id="password" type="password" name="password" required>
          <label for="password">Password</label>
        </div>
        <div class="center-align">
          <!-- Botão de login personalizado -->
          <button type="submit" class="btn waves-effect waves-light custom-login-btn">Login</button><br>
          <%if(error){%>
              <span>
                  <%=error.error%>
              </span>
          <%}%>
      </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    M.updateTextFields();
  });

  document.getElementById('loginForm').addEventListener('submit', function (event) {
    // event.preventDefault();
    var username = document.getElementById('username').value;
    var password = document.getElementById('password').value;

    console.log(username, password);

    if (!username || !password) {
      event.preventDefault();
      M.toast({ html: 'Por favor, preencha todos os campos', classes: 'red' });
    }
  });
</script>